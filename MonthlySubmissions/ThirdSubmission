FUNCTION FillIn(full : STRING, cur : STRING, letter : CHAR) RETURNS STRING
	DECLARE Split : ARRAY[1:LENGTH(full)] OF STRING
    
    FOR X ← 1 TO LENGTH(full)
    	IF SUBSTRING(full, X, 1) = letter
        	THEN
            	Split[X] ← SUBSTRING(full, X, 1)
            ELSE
            	Split[X] ← SUBSTRING(cur, X, 1)
        ENDIF
    NEXT X
    
    DECLARE Block : STRING
    
    FOR X ← 1 TO LENGTH(full)
    	Block ← Block, Split[X]
    NEXT X
    
    RETURN Block
ENDFUNCTION

CONSTANT Goes ← 10


FUNCTION Iterate(w : STRING) RETURNS STRING
	DECLARE Actual : STRING
    FOR X ← 1 TO LENGTH(w)
    	Actual ← Actual, '-'
    NEXT X
    
    	
    
    FOR X ← 1 TO Goes
		DECLARE Ltr : CHAR
        OUTPUT (Goes + 1 - X),"/10 attempts left. Current word is ",LCASE(Actual),". Guess next letter:"
        INPUT Ltr
		Ltr ← UCASE(Ltr)
        
        Actual ← FillIn(UCASE(w), Actual, Ltr)
        
        IF UCASE(Actual) = UCASE(w)
        	THEN
            	RETURN "You won!"
        ENDIF
    NEXT X
    
    RETURN "You lost. The word was " , w , '.'
ENDFUNCTION

DECLARE Selection : INTEGER
OUTPUT "Enter the number of possible words to choose from:"
INPUT Selection

DECLARE WordList : ARRAY[0:Selection - 1] OF STRING
OUTPUT "Enter your ",Selection," words:"
INPUT WordList

CONSTANT Chosen ← WordList[ROUND(RANDOM() * (Selection - 1),0)]

OUTPUT Iterate(Chosen)